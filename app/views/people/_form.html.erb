<%= form_for @person do |f| %>
	<p>
		<%= f.label :name %></br>
		<%= f.text_field :name %>
	</p>
	<p>
		<%= f.label :bio %></br>
		<%= f.text_area :bio %>
	</p>
	<p>
		<%= f.label :link %></br>
		<%= f.text_field :link %>
	</p>
	<p>
	    <%= f.label :image, "Attach an Image" %>
	    <%= f.file_field :image %>
	</p>
	<p>
		<%= f.submit %>
	</p>
<% end %>